{
    "name": "MIPS Assembly",
    "scopeName": "source.mips",
    "patterns": [
        {
            "match": "\\b(LDI|OUT|IN|RJMP)\\b",
            "name": "keyword.control.mips"
        },
        {
            "match": "\\b(R\\d+|DDRD|DDRB|PORTD|PORTB|PIND)\\b",
            "name": "storage.type.mips"
        },
        {
            "match": "0x[0-9A-Fa-f]+",
            "name": "constant.numeric.mips"
        },
        {
            "match": "\\b(main|loop)\\b",
            "name": "entity.name.function.mips"
        }
    ]
}